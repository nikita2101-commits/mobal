<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона -->
    <solid android:color="@android:color/white" />

    <!-- Закругленные углы -->
    <corners android:radius="24dp" />

    <!-- Граница -->
    <stroke
        android:width="1dp"
        android:color="#BB86FC" />

    <!-- Внутренние отступы -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />

</shape>